{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core"],
  "linter": {
    "enabled": true
  },
  "overrides": [
    {
      "includes": ["*.md", "*.mdx"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["**/index.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    }
  ]
}
