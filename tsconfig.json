{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./packages/*"],
      "effect": ["./node_modules/effect"]
    },
    "strictNullChecks": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": [
    "packages/*/src",
    "packages/*/test",
    "packages/*/services",
    "packages/*/__tests__"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules"
  ]
}
