{
	"name": "effect-cockpit",
	"version": "0.5.2",
	"description": "Next-generation application harness wrapping CLI tools and processes into a structured TUI",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"typecheck": "echo 'Typecheck disabled for effect-cockpit pending refactor'",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"demo": "bun run examples/demo.ts"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@types/react": "^19.2.8",
		"better-sqlite3": "^12.6.2",
		"effect-actor": "workspace:*",
		"effect-cli-tui": "workspace:*",
		"ink": "^6.6.0",
		"ink-text-input": "^6.0.0",
		"kysely": "^0.28.9",
		"kysely-bun-sqlite": "^0.4.0",
		"node-pty": "^1.1.0",
		"react": "^19.2.3"
	},
	"peerDependencies": {
		"effect": "^3.19.14"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@effect/vitest": "^0.25.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^20.19.27",
		"effect": "^3.19.14",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"ultracite": "^6.5.0",
		"vitest": "^4.0.16"
	}
}
