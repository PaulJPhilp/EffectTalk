{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": "../../",
    "paths": {
      "@/effect-html/*": ["./packages/effect-html/src/*"],
      "effect": ["./node_modules/effect"],
      "effect/*": ["./node_modules/effect/*"]
